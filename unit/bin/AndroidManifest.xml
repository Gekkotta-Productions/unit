<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gekkotta.productions.unit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.gekkotta.productions.unit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gekkotta.productions.unit.Tutorial"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TUTORIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gekkotta.productions.unit.TeamScore"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TEAMSCORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.gekkotta.prductions.unit.clicking.CLICKING"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CLICKING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gekkotta.productions.unit.clicking.ACHIEVEMENT"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ACHIEVEMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gekkotta.productions.unit.clicking.UPGRADE"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.UPGRADE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="com.bump.api.BumpAPI" >
            <intent-filter>
                <action android:name="com.bump.api.IBumpAPI" />
            </intent-filter>
        </service>
    </application>

</manifest>